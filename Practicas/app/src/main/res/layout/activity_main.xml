<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:weightSum="6" android:layout_margin="10dp"
            tools:layout_editor_absoluteY="5dp" tools:layout_editor_absoluteX="5dp">
        <Button
                android:text="Practica 1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP1" android:layout_weight="1"/>
        <Button
                android:text="Practica 2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP2" android:layout_weight="1"/>
        <Button
                android:text="Practica 3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP3" android:layout_weight="1"/>
        <Button
                android:text="Practica 4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP4" android:layout_weight="1"/>
        <Button
                android:text="Practica 5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP5" android:layout_weight="1"/>
        <Button
                android:text="Practica 6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnP6" android:layout_weight="1"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>