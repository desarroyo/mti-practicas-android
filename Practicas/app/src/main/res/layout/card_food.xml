<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content" app:cardCornerRadius="6dp"
                                   app:cardElevation="4dp" android:layout_gravity="center_horizontal|center_vertical"
                                   android:layout_margin="5dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:weightSum="2" android:padding="7dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1.5" android:weightSum="4">
            <TextView
                    android:text="Hamburguesa"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/txtTitle" android:textSize="30sp"
                    android:textStyle="bold" android:layout_weight="1" android:gravity="bottom"
                    android:textColor="#673AB7"/>
            <RatingBar
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/ratingBar" android:numStars="5"
                    android:rating="1" style="@style/Widget.AppCompat.RatingBar.Indicator" android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:weightSum="2" android:layout_weight="1">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView
                            android:text="20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtRate"
                            android:textAlignment="center" android:textStyle="bold" android:textSize="24sp"
                            android:textColor="#2196F3"/>
                    <TextView
                            android:text="status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView6"
                            android:textAlignment="center" android:textColor="#00BCD4"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView
                            android:text="50"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/txtTotal"
                            android:textAlignment="center" android:textStyle="bold" android:textSize="24sp"
                            android:textColor="#03A9F4"/>
                    <TextView
                            android:text="visitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/textView9"
                            android:textAlignment="center" android:textColor="#00BCD4"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1" android:gravity="bottom">
                <TextView
                        android:text="otro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtPrice" android:layout_weight="1"
                        android:textAlignment="center" android:textStyle="bold" android:textColor="#9C27B0"/>
                <TextView
                        android:text="otro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/txtPhone" android:layout_weight="1"
                        android:textAlignment="center" android:textStyle="bold" android:textColor="#9C27B0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:layout_weight="0.5">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/burguer"
                    app:civ_border_color="#3f51b5"
                    app:civ_border_width="4dp"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="10"
                    app:civ_shadow_color="#3f51b5"
                    android:id="@+id/imgFood" android:layout_margin="10dp" android:layout_gravity="top"/>
            <TextView
                    android:text="otro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txtShare" android:textAlignment="center"
                    android:textStyle="bold" android:textColor="#9C27B0"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>