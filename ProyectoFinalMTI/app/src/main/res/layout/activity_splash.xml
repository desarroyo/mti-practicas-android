<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@color/design_default_color_primary_dark"
              tools:context=".SplashActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="50dp">
        <ImageView
                android:src="@drawable/logo"
                android:layout_width="250dp"
                android:layout_height="match_parent" android:id="@+id/imageView2" android:layout_weight="1"/>
        <ImageView
                android:src="@drawable/mti"
                android:layout_width="100dp"
                android:layout_height="250dp" app:srcCompat="@drawable/mti"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proyecto Final MTI"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"/>

</LinearLayout>